<?xml version="1.0" encoding="utf-8"?>
<com.github.easyguide.layer.RelativeLayerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="#ff6c00"
        android:text="this is guide 1"
        android:layout_alignRight="@id/arrow_down"
        android:layout_above="@id/arrow_down"/>

    <ImageView
        android:id="@+id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/arrow_yellow_down"
        app:target_alignRight="@+id/easy_guide_1"
        app:target_above="@+id/easy_guide_1"/>

</com.github.easyguide.layer.RelativeLayerView>